<Window x:Class="IntelMetTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntelMetTask"
        mc:Ignorable="d"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="IntelMetTask" Height="600" Width="800" MinHeight="600" MinWidth="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <DockPanel Height="Auto" Width="Auto" LastChildFill="True">
            <Button Click="ShowFilePicker_OnClick" 
                    Width="90" Margin="10" 
                    Content="Открыть" 
                    DockPanel.Dock="Top" 
                    HorizontalAlignment="Left"/>
            
            <oxy:Plot Name="Plot" Title="{Binding Title}">
                <oxy:Plot.Series>
                    <oxy:LineSeries ItemsSource="{Binding Original}" Color="Blue"/>
                    <oxy:LineSeries ItemsSource="{Binding NoNoise}" Color="Red"/>
                </oxy:Plot.Series>
            </oxy:Plot>
        </DockPanel>
    </Grid>
</Window>
